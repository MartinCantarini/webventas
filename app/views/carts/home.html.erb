<html>
<head>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body onload="mostraroculto()">
    <div id="searchbar">
        <div class="row">
        <br>
            <div class="col-md-3"></div>
            <center>
            <div class="col-md-6">

                <%=render "searchbar"%>
                
            </div>
           </center>
           <div class="col-md-3"></div>
         </div>
    </div>










    <div id="novedades">
    <div class="row">
        <br><br>
            <div class="col-md-1"></div>
            <div class="col-md-11"><h2>Novedades:</h2><br></div>
            <div class="col-md-1"></div>
            <div class="col-md-11"><%=render 'articles/novedades'%></div>
            
    </div>
    </div>
    <div id="categorias">
         <div class="row">
            <br><br>
            <div class="col-md-1"></div>
            <div class="col-md-11"><h2>Categorias:</h2></div>
            <div class="col-md-12"><br></div>
            <center>
            <%Category.all.each do |categoria|%>
                <%idcategoria=categoria.id%>
                <%cantidad=Article.where("category_id = #{idcategoria}").count%>
                <div class="col-md-6">
                    <%=link_to categoria.name+"(#{cantidad})",articles_path(categoria.id)%>
                </div>
            <%end%>
            <div class="col-md-12">
                    <center>
                        <%=link_to "Ver todos"+"(#{Article.count})",articles_path()%>
                    </center>
                </div>
            </center> 
        </div> 
        <br><br> 
    </div>
    <div id="articulos-mas-votados">
    <div class="row">
        <br><br>
            <div class="col-md-1"></div>
            <div class="col-md-11"><h2>Artículos mejor valorados:</h2><br></div>
            <div class="col-md-1"></div>
            <div class="col-md-11"><%=render 'articles/maslikes'%></div>
    </div>
    </div>

</body>
</html>
