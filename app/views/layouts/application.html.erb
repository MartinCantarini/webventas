<!DOCTYPE html>
<html>
<head>
  <title>Myapp</title>
  <link rel="stylesheet" type="text/css" href="style.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'default', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#">ArgenShopping</a>
    </div>
    <div>
      <ul class="nav navbar-nav navbar-right">

            <li class="active"><a href="/">Home</a></li>
            <%if user_signed_in?%>
              <li><a href="/carts/new">Mi carrito</a></li>
              <%if current_user.role=="admin"%>
                <li><a href="/users/edit"><%= current_user.email+" (ADMINISTRADOR DEL SITIO)"%></a></li>
              <%else%>
                <li><a href="/users/edit"><%= current_user.email %></a></li>
              <%end%>
              <li><a href="/users/sign_out">Salir</a></li>
            <%else%>  
              <li><a href="/users/sign_in">Iniciar Sesión</a></li>
              <li><a href="/users/sign_up">Registrarse</a></li>
            <%end%>
      </ul>
    </div>
  </div>
    </nav>
    <div id="container">
        
      <div id="box-izq">
        <nav>
          <ul class="nav nav-pills nav-stacked span2">
              <li><a href="/" >Buscar un producto</a></li>
            <%if user_signed_in?%>
              <li><a href="/users/edit">Mi Perfil</a></li>
              <li><a href="/articles/new">Publicar un producto</a></li>
            <%end%>
              <li><a href="#" >¿Cómo comprar?</a></li>
              <li><a href="#">¿Cómo vender?</a></li>
              <li><a href="#">Sobre el sitio</a></li>
              <li><a href="#">Mapa del sitio</a></li>
              <li><br></li>
            <%if user_signed_in? and current_user.role=="admin"%>
                  <div id="menu_admin">
                        <label style="color:red;">MENU ADMINISTRADOR</label>
                        <li><a href="/articles">Administrar Artículos</a></li>
                        <li><a href="/comments">Administrar Comentarios</a></li>
                        <li><a href="/categories">Administrar Categorias</a></li>
                  </div>
            <%end%>  
            </ul>
      </nav>
        </div>

      <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>  
      <div id="box-central">


<%= yield %>
</div>

</body>
</html>
